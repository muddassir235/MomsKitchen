<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/meal_thumbnail_image_view"
            android:layout_width="90dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="90dp"
            />

        <TextView
            android:id="@+id/meal_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="French Fries"
            android:layout_toRightOf="@+id/meal_thumbnail_image_view"
            android:textStyle="bold"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceListItem" />

        <!--<TextView-->
            <!--android:id="@+id/meal_description_text_view"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Delicious frech fries with kechup and salad"-->
            <!--android:layout_toRightOf="@+id/meal_thumbnail_image_view"-->
            <!--android:layout_marginLeft="@dimen/activity_horizontal_margin"-->
            <!--android:maxLines="2"-->
            <!--android:layout_below="@+id/meal_name_text_view"-->
            <!--android:layout_toLeftOf="@+id/meal_price_text_view"-->
            <!--/>-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/meal_thumbnail_image_view"
            android:layout_toLeftOf="@+id/meal_quantity_text_view"
            android:layout_below="@+id/meal_name_text_view"
            android:layout_margin="@dimen/activity_horizontal_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time: "/>
            <Spinner
                android:id="@+id/meal_times_available_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/meal_price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="70 PKR"
            android:textColor="@color/colorAccent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:textAppearance="?attr/textAppearanceListItem" />
        <TextView
            android:id="@+id/meal_quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21"
            android:layout_below="@+id/meal_price_text_view"
            android:textSize="18sp"
            android:layout_alignRight="@+id/meal_price_text_view"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>