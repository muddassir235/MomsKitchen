<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/gradient_1"
    style="@style/FirebaseUI.WrapperStyle">

    <ImageView
        android:id="@+id/email_icon_iv"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/email_icon_1"
        android:layout_centerHorizontal="true"/>

    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/email_icon_iv"
        android:id="@+id/input_layout_email"
        android:paddingTop="24dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:theme="@style/FirebaseUI.Text.TextInputLayout"
        app:hintTextAppearance="@style/FirebaseUI.Text.HintText"
        app:errorTextAppearance="@style/FirebaseUI.Text.ErrorText"
        android:textColorHint="#AAFFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            style="@style/FirebaseUI.EditText"
            android:id="@+id/email"
            android:inputType="textEmailAddress"
            android:hint="@string/email_hint"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="24sp"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
          />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/input_layout_email"
        android:gravity="right"
        >
        <Button
            style="@style/FirebaseUI.Button"
            android:text="@string/next"
            android:id="@+id/button_ok"
            />
    </LinearLayout>
</RelativeLayout>
